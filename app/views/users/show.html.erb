<main>
 <p id="notice"></p>
 <div class='container px-5 px-sm-0'>
 <div class='row'>
 <div class='col-md-3'>

  <h2>User info</h2>
   <table class='table'>

    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

   <tr>
	   <th>name</th>
    <td><%= @user.name %></td>
   </tr>

   <tr>
	   <th>introduction</th>
	   <th><%= @user.introduction %></th>
   </tr>

   </table>

 <div class='row'>
  <%= link_to edit_user_path(@user.id) ,class:"btn btn-outline-secondary btn-block" do %>

  <i class="fas fa-user-cog"></i>
  <% end %>

 </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model:@book, local:true do |f| %>

  <div class="form-group">
    <label for="book_title" style="display:block">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <label for="book_opinion" style="display:block">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
   <%= f.submit 'Create Book' ,class:"btn btn-success"%>
  </div>

 <% end %>



  </form>
  </div>

  <div class='col-md-8 offset-md-1'>
   <h2>Books</h2>
    <table class='table table-hover table-inverse'>
     <thead>
      <tr>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
      <% @books.each do |book| %>

      <tr>
       <td><%= link_to user_path(book.user.id) do %>
           <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
           <% end %>
       </td>

       <td><%= link_to book_path(book.id) do %><%= book.title %>
           <% end %>
       </td>

       <td><%= book.body %></td>
       <td colspan="3"></td>
      </tr>

      <% end %>

     </tbody>

    </table>
   </div>
  </div>
 </div>
</main>