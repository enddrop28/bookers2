<main>
 <div class='container px-5 px-sm-0'>
 <div class='row'>
 <div class='col-md-3'>

  <h1>Editing Book</h1>

   <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
     <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
   <% end %>

  <%= form_with model:@book, local:true do |f| %>

  <div class="form-group">
    <label for="book_title" style="display:block">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <label for="book_opinion" style="display:block">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
   <%= f.submit 'Update Book' ,class:"btn btn-success"%>
  </div>

 <% end %>

   <tr>
    <td><%= link_to "Show", book_path(@book) %></td>
    <td><%= link_to "Back", books_path %></td>
   </tr>

  </div>
 </div>
</div>